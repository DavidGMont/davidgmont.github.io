		<div id="app"></div>
		<script>
			const vm = Vue.createApp({
				data() {
					return {
						username: "",
						loggedIn: false,
						title: "",
						description: "",
						date: new Date(),
						posts: [],
					};
				},
				methods: {
					userAnalizer() {
						if (this.loggedIn && this.username === "") this.username = "ðŸ•µï¸â€â™‚ï¸";
					},
					time(Date) {
						return (
							Date.toLocaleDateString() + " @ " + Date.toLocaleTimeString()
						);
					},
					descriptionAnalizer(string) {
						if (string.trim().length > 0) {
							return string.trim();
						} else {
							return "ðŸ‘»";
						}
					},
					publishPost() {
						this.posts.unshift({
							title: this.title.trim(),
							description: this.descriptionAnalizer(this.description),
							date: this.time((this.date = new Date())),
						});
						this.title = "";
						this.description = "";
					},
					removePost(i) {
						this.posts.splice(i, 1);
					},
				},
				watch: {
					loggedIn() {
						this.userAnalizer();
						if (!this.loggedIn) this.username = "";
						console.log(this.loggedIn, this.username);
					},
				},
				template: `
                    <section v-if="!loggedIn">
                        <h1>Te doy la bienvenida ðŸ˜„</h1>
                        <form>
                            <label for="username">Dame tu nombre</label>
                            <input
                                type="text"
                                name="username"
                                id="username"
                                required
                                v-model="username"
                            />
                            <button type="button" @click="loggedIn = !loggedIn">Empezar</button>
                        </form>
                    </section>
                    <section v-else>
                        <h1>Hola, {{ username }}</h1>
                        <form>
                            <h2>Â¿QuÃ© estÃ¡s pensando?</h2>
                            <label for="post-title"><i class="fa-solid fa-comment"></i> TÃ­tulo</label>
                            <input
                                type="text"
                                name="post-title"
                                id="post-title"
                                v-model="title"
                                />
                            <label for="post-description"><i class="fa-solid fa-pencil"></i> DescripciÃ³n</label>
                            <textarea
                                name="post-description"
                                id="post-description"
                                cols="30"
                                rows="5"
                                required
                                placeholder="Escribe tus grandes ideas ðŸŒˆ"
                                v-model="description"
                            ></textarea>
                            <button type="button" @click="publishPost">AÃ±adir</button>
                        </form>
                        <div>
                            <article v-for="(item, i) in posts" :key="i">
                                <h2>{{ item.title }}</h2>
                                <p><i class="fa-solid fa-quote-left"></i> {{ item.description }}</p>
                                <footer>
                                    <p><i class="fa-solid fa-circle-user"></i> {{ username }}</p>
                                    <p><i class="fa-regular fa-calendar-days"></i> {{ item.date }}</p>
                                    <button type="button" class="remove" @click="removePost(i)">
                                        <i class="fa-solid fa-circle-xmark"></i> 
                                        Eliminar
                                    </button>
                                </footer>
                            </article>
                        </div>
                        <button type="button" @click="loggedIn = !loggedIn">Salir</button>
                    </section>
                `,
			}).mount("#app");
		</script>
